# ========================================
# إعدادات قاعدة البيانات (Vercel Postgres)
# ========================================

# سيتم تعيينها تلقائياً في Vercel
# DATABASE_URL="postgres://..."

# ========================================
# إعدادات الأمان
# ========================================

# مفتاح سري للـ Cron Jobs (اختياري)
CRON_SECRET=your_random_secret_key_here

# ========================================
# إعدادات ديسكورد (للإشعارات من الويب)
# ========================================

# توكن البوت (اختياري - للإشعارات التلقائية)
DISCORD_BOT_TOKEN=your_bot_token_here

# معرف قناة الإشعارات
NOTIFICATION_CHANNEL_ID=your_channel_id_here

# ========================================
# إعدادات أخرى
# ========================================

NODE_ENV=production
